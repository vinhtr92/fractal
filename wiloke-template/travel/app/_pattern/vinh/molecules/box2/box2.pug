//- demo: true
mixin vinhBox2(args)
	include cssmodule

	+module('div', css.module, args)
		- 
			let args = item
			let imgsrc = 'https://picsum.photos/600/600/?random'
		
		//- code
		a(href= args.link || '#')
			div(class=css.meta)
				+vinhTextboxSmall({
					addClass: 'md-meta',
					loop: {
						data: [
								{
									icon: 'la la-eye',
									text: '120 view',
									modifier: 'meta',
								},
								{
									icon: 'la la-comment-o',
									text: '03 comment',
									modifier: 'meta',

								}
						],
					}
				})
				include cssmodule
			div(class=css.img)
				img(src= args.imgsrc || imgsrc ) 
			div(class=css.content)
				div(class=css.header)
					h4(class=css.tag)= args.tag || random(random.country)
					h3(class=css.title)= args.title || random(random.title)
				div(class=css.icon)
					i(class=set(args,'icon','fa fa-ellipsis-v'))
	include cssmodule
