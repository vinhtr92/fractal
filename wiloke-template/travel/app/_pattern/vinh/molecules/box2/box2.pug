//- demo: true
mixin vinhBox2(args)
	include cssmodule

	+module('div', css.module, args)
		- 
			let args = item
			let imgsrc = `img/place/${ random(1, 31) }.jpg`
		
		//- code
		div.wil-overlay
		div(class=css.meta)
			+vinhTextboxSmall({
				loop: {
					data: [
							{
								icon: 'la la-eye',
								text: '120 view',
								modifier: 'meta',
							},
							{
								icon: 'la la-comment-o',
								text: '03 comment',
								modifier: 'meta',
							}
					],
				}
			})
			include cssmodule
		+vinhImagecover({

		})
		include cssmodule
		div(class=css.content)
			+vinhTextboxSmall({
				modifier: 'category--style02',
				color: ' ',
			})
			include cssmodule
			h3(class=css.title)
				a(href="#")= args.title || random(random.title)
			div(class=css.icon)
				a(href="#")
					i(class= args.icon || 'la la-ellipsis-v')


include cssmodule
