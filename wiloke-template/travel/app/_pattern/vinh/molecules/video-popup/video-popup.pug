//- demo: true
mixin video-popup(args)
	include cssmodule
	+module('div', css.module, args)
		- let args = item

		div(class=css.media)
			div(class=css.overlay, style=`background-color: ${ args.overlayColor || '' }`)
			div(class=css.img, style=`background-image: url('${ args.img || 'http://via.placeholder.com/800x400' }')`)

			if (has(args.modifier, 'text'))
				h2(class=css.title)= args.title || random(random.title)
				div(class=css.desc)= args.desc || random(random.text, 50)
			a(href=set(args, 'popup', 'https://vimeo.com/259411563'), class=css.popup, class="js-video-popup")
				i(class=args.iconplay || 'la la-play')
