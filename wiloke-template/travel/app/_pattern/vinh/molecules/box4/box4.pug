//- demo: true
mixin vinhBox4(args)
	include cssmodule

	+module('div', css.module, args)
		- let args = item
		- let imgsrc = 'https://picsum.photos/900/900/?random'

		//- code

		div(class='overlay')
		div(class=css.image style=`background-image:url('${args.imgsrc||imgsrc}')`)
		div(class=css.content)
			div(class=css.heading)
				h3(class=css.title)= args.title || random(random.continental)
				div(class=css.desc)= args.desc  || random(random.text,40)
		div(class=css.thumbList)
			ul
				li
					span(class='icon-share'): i(class= args.iconshare||'la la-plus')
				li= args.thumb
					img(src=args.thumbsrc || 'https://picsum.photos/60/60/?random')
	include cssmodule
