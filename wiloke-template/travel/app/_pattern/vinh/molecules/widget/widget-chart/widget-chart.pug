//- demo: true
mixin vinhWidgetChart(args)
	include cssmodule

	+module('div', '', args)
		- let args = item
		
		//- code
		a.widget_chart__item(href='#')
			+vinhImagecover({
				imgsrc: args.imgsrc || `img/place/${ random(1, 31) }.jpg`
			})
			include cssmodule
			.wil-overlay
			h3(class='widget_chart__title')= args.title || random(random.country)
	include cssmodule
