//- demo: true
mixin vinhWidgetList(args)
	include cssmodule

	+module('ul', '', args)
		- let args = item
		//- code

		if args.submenu
			li.has-child
				a(href="#")= args.submenu.text || 'text'
				ul(class='sub-menu')
					+vinhListitem({
						loop: args.submenu.data || {
							data: [{},{}]
						}
					})
	
		else
			li
				a(href="#")= set(item, 'text', 'widget list')

	include cssmodule
