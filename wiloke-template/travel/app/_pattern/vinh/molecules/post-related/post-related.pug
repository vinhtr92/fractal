//- demo: true
mixin vinhPostRelated(args)
	include cssmodule

	+module('div', css.module, args)
		- let args = item
		
		//- code
		div(class=css.img)
			+vinhImagecover({
				modifier: 'ratio-16by9'
			})
			include cssmodule
		div(class=css.body)
			+vinhTextboxSmall({
				modifier: 'category--style02'
			})
			include cssmodule
			h3(class=css.title)
				a(href="#")= args.title || random(random.title)
		
		
		
	include cssmodule
