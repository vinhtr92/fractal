//- demo: true
mixin vinhHerotext(args)
	include cssmodule

	+module('div', css.module, args)
		- let args = item
		
		//- code
		if args.destinations
			p(class=css.destinations)= args.destinations || '12 destinations'
		h2(class=css.title)= args.title|| random(random.title)
		div(class=css.desc)= args.desc || random(random.text,90)
		
		
		
	include cssmodule
