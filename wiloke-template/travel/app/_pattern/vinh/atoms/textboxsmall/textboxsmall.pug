//- demo: true
mixin vinhTextboxSmall(args)
	include cssmodule

	+module('span', css.module, args, id=args.id)
		-
			let args = item
			let icon = args.icon || random(random.font7);
			let color =  args.iconColor;
			let iconClass = args.iconClass;
			let textClass = args.textClass;

		//- code
		if (has(args.modifier, 'reverse'))
			a(href= args.link || '#')
				span(class='desc', class=args.classText)= args.text || 'July 12'
				span(class=color): i(class=icon)
		else if (has(args.modifier,'singleIcon')) 
			a(href= args.link || '#'):  i(class=icon)

		else if (has(args.modifier,'singleText')) 
			= args.text || 'July 12'

		else if (has(args.modifier,'category'))
			h4(class='module-category' class=args.bgColor || 'bgcolor-primary')
				a(href='#')= args.category || random(random.continental)
		
		else if (has(args.modifier,'category--style02'))
			h4(class='module-category' class=args.color || 'color-primary')
				a(href='#')= args.category || random(random.continental)

		else if (has(args.modifier,'meta'))
			a(class='md-meta' href='#')
				i(class=icon)
				= args.text || 'July 12'
			
		else
			a(href= args.link || '#')
				span(class='icon',class=color): i(class=icon)
				span(class='desc', class=args.classText)= args.text || 'July 12'

	include cssmodule
