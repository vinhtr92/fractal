//- demo: true
mixin vinhTextboxsmall2(args)
	include cssmodule

	+module('div', css.module, args)
		- let args = item
		//- code
		if (has(args.modifier,'type01'))
			h3(class=css.location)= args.location || random(random.country)
			div(class=css.desc)= args.desc || random(random.text,30)
		else if(has(args.modifier,'type02'))
			h3(class=css.title)= args.title || random(random.title)
			div(class=css.desc)= args.desc || random(random.text,30)
		else 
			div(class=css.location)= args.location || random(random.country)
			h3(class=css.title)= args.title || random(random.title)
	include cssmodule
