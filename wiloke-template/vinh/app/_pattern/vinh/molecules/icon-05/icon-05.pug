//- demo: true
mixin vinhIcon05(args)
	include cssmodule

	+module('div', css.module, args)
		- let args = item
		
		//- code
		div(class=css.icon)
			i(class=set(args,'icon',random(random.fontawesome)))
		div(class=css.counter)
		div(class=css.content)
			h3(class=css.title)= set(args, 'title', random(random.title))
			div(class=css.text)
				p= set(args,'text', random(random.text, 80))
	include cssmodule
