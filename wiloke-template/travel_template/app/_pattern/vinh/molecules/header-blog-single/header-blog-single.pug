//- demo: true
mixin long_header-blog-single(args)
	include cssmodule

	+module('div', css.module, args)
		-
			let args = item
			let title = args.title || random(random.title)
		
		//- Args: title
		+long_list-title-sm({
			forSingle: true,
			title,
			modifier: ['light', 'large']
		})
		
		include cssmodule
		div(class=css.meta)
			//- Args: icon, iconColor, text
			+long_text-box-small({
				icon: 'pe-7s-date',
				iconColor: 'color-tertiary',
				text: 'July 12, 2016',
				modifier: 'light',
				addClass: css.metaItem
			})
			include cssmodule
			//- Args: icon, iconColor, text
			+long_text-box-small({
				icon: 'pe-7s-look',
				iconColor: 'color-secondary',
				text: '2230',
				modifier: 'light',
				addClass: css.metaItem
			})
			include cssmodule
			//- Args: icon, iconColor, text
			+long_text-box-small({
				icon: 'pe-7s-comment',
				iconColor: 'color-primary',
				text: '102',
				modifier: 'light',
				addClass: css.metaItem
			})
