//- demo: true
mixin longInfoContact(args)
	include cssmodule

	div.mb-20
		img(src="img/logo.png", alt="")

	div.mb-30= random(random.text, 150)
	
	//- Args: icon, iconColor, text
	+long_text-box-small-2({
		icon: 'fa fa-phone',
		text: '+<a href="#">84123456789</a> or <a href="#">+84987654321</a>',
		addClass: 'mb-15',
		modifier: 'lg'
	})
	//- Args: icon, iconColor, text
	+long_text-box-small-2({
		icon: 'fa fa-map-marker',
		text: '<a href="#">121 King Street, Melbourne Victoria  3000 Australia</a>',
		addClass: 'mb-15',
		modifier: 'lg'
	})
	//- Args: icon, iconColor, text
	+long_text-box-small-2({
		icon: 'fa fa-envelope',
		text: '<a href="#">Wiloke@gmail.com</a>',
		addClass: 'mb-15',
		modifier: 'lg'
	})
	
		
	include cssmodule
