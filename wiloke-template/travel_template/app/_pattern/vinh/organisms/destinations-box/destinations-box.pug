//- demo: true
mixin longDestinationsBox(args)
	include cssmodule

	+module('div', css.module, args)
		- let args = item
		
		+container
			include cssmodule
			div(class=css.bg)
				//- Args: title
				+long_cat-title({
					title: 'Filter by Region',
				})
				+row({
					attr: {
						'data-col-xs-gap': 20
					}
				})
					//- Args: img, country
					+long_image-box({
						loop: {
							data: [{},{},{},{}],
							wrap: 'col-md-4 col-lg-3'
						},
						modifier: 'style2'
					})
				div.mb-40
				//- Args: title
				+long_cat-title({
					title: 'Filter by Country',
				})
				+row({
					attr: {
						'data-col-xs-gap': 20
					}
				})
					//- Args: img, country
					+long_image-box({
						loop: {
							data: [{},{},{},{},{},{},{},{}],
							wrap: 'col-md-4 col-lg-3'
						},
						modifier: 'style2'
					})
