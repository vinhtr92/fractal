//- demo: true
mixin textbox(args)
	include cssmodule
	+module('div', css.module, args)
		- var args = item
		div(class=css.icon)
			i(class=set(args, 'icon', random(random.lineawesome)))
		div(class=css.body)
			h2(class=css.title)= set(args, 'title', random(random.title))
			div(class=css.text)
				p= set(args, 'text', random(random.text, 70))
