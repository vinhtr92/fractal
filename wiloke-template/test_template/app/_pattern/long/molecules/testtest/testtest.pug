//- demo: true
mixin long_testtest(args)
	include cssmodule

	+module('div', css.module, args)
		- let args = item
		
		div(class=css.img): img(src="img/1.jpg", alt="")

		h2(class=css.title)= args.title || random(random.title)

		div(class=css.text)= args.text || random(random.text, 200)
		div(class=css.text2)= args.text2 || random(random.text, 200)
